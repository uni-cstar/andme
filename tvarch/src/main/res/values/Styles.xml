<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TVTheme" />

    <style name="TVTheme.Leanback" parent="Theme.Leanback">
        <item name="backgroundColor">@color/background_color</item>
        <item name="roundedRadius">@dimen/rounded_radius</item>
        <!--标题栏背景色-->
        <item name="colorPrimary">@color/color_primary</item>
        <!--状态栏背景色-->
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <!--控件激活颜色-->
        <item name="colorAccent">@color/color_accent</item>
        <!--分割线颜色-->
        <item name="colorDivider">@color/color_divider</item>
        <!--主题色文本-->
        <item name="textColorTheme">@color/text_color_theme</item>
        <!--标题栏文本颜色-->
        <item name="android:textColorPrimary">@color/text_color_primary</item>
        <item name="android:textColorPrimaryInverse">@color/text_color_primary_inverse</item>
        <item name="android:textColorSecondary">@color/text_color_secondary</item>
        <item name="android:textColorSecondaryInverse">@color/text_color_secondary_inverse</item>
        <item name="textColorCaption">@color/text_color_caption</item>
        <item name="textColorCaptionInverse">@color/text_color_caption_inverse</item>
        <item name="android:textColorLink">@color/text_color_link</item>
        <item name="android:textColorLinkInverse">@color/text_color_link_inverse</item>
        <item name="android:buttonStyle">@style/UI.Button</item>
    </style>

    <style name="TVTheme.AppCompat" parent="AMTheme">
        <item name="android:windowFullscreen">true</item>
    </style>


    <style name="TVWidget" />

    <style name="TVWidget.AutoSizeText" parent="Text.Body">
        <item name="autoSizeTextType">uniform</item>
        <item name="autoSizeMinTextSize">@dimen/auto_size_min_text_size</item>
    </style>

    <style name="TVWidget.AutoSizeText.Body" parent="Text.Body">
        <item name="autoSizeTextType">uniform</item>
        <item name="autoSizeMinTextSize">@dimen/auto_size_min_text_size</item>
        <item name="autoSizeMaxTextSize">@dimen/text_size_body</item>
    </style>

    <style name="TVWidget.AutoSizeText.Body.Secondary" parent="Text.Body.Secondary">
        <item name="autoSizeTextType">uniform</item>
        <item name="autoSizeMinTextSize">@dimen/auto_size_min_text_size</item>
        <item name="autoSizeMaxTextSize">@dimen/text_size_body</item>
    </style>

    <style name="TVWidget.AutoSizeText.SubHead" parent="Text.SubHead">
        <item name="autoSizeTextType">uniform</item>
        <item name="autoSizeMinTextSize">@dimen/auto_size_min_text_size</item>
        <item name="autoSizeMaxTextSize">@dimen/text_size_subhead</item>
    </style>

    <style name="TVWidget.AutoSizeText.Title" parent="Text.Title">
        <item name="autoSizeTextType">uniform</item>
        <item name="autoSizeMinTextSize">@dimen/auto_size_min_text_size</item>
        <item name="autoSizeMaxTextSize">@dimen/text_size_title</item>
    </style>


    <style name="DialogActivityTheme" parent="Theme.AppCompat.Dialog">
        <item name="android:windowFrame">@null</item>
        <!-- 边框 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- 半透明 -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 模糊 -->
        <item name="android:windowCloseOnTouchOutside">false</item>
        <!-- 重点，去掉标题 -->
        <item name="windowNoTitle">true</item>
    </style>


</resources>