<?xml version="1.0" encoding="utf-8"?>
<resources>


    <!--标题文本大小-->
    <dimen name="text_size_title">20sp</dimen>
    <!--子标题文本大小-->
    <dimen name="text_size_subhead">18sp</dimen>
    <!--正文文本大小-->
    <dimen name="text_size_body">15sp</dimen>

    <!--描述性文本-->
    <dimen name="text_size_caption">13sp</dimen>
    <!--按钮文本大小-->
    <dimen name="text_size_button">15sp</dimen>
    <!--大号按钮文本-->
    <dimen name="text_size_button_medium">17sp</dimen>
    <!--超小文本：通常不建议使用，用在app内的角标数-->
    <dimen name="text_size_tiny">11sp</dimen>


    <dimen name="auto_size_min_text_size">@dimen/text_size_tiny</dimen>


    <dimen name="browser_container_padding">8dp</dimen>

    <dimen name="browser_item_margin">14dp</dimen>

    <dimen name="view_margin">10dp</dimen>
    <dimen name="view_margin_big">16dp</dimen>
    <dimen name="view_margin_inner">5dp</dimen>

    <!--文本内部padding-->
    <dimen name="text_padding_inner">10dp</dimen>
    <dimen name="text_padding_horizontal">12dp</dimen>
    <dimen name="text_padding_vertical">6dp</dimen>

    <dimen name="activity_horizontal_margin">32dp</dimen>

    <!--row header title size-->
    <dimen name="row_header_text_size">@dimen/text_size_subhead</dimen>


    <!--焦点框大小-->
    <dimen name="focus_border_size">2dp</dimen>
    <dimen name="focus_border_size_half">1dp</dimen>

    <!--焦点框颜色-->
    <color name="focus_border_color">#FFFFFFFF</color>

    <!--焦点框与边框之间的分割线大小-->
    <dimen name="focus_border_divider_size">3dp</dimen>

    <!--焦点框与边框之间的分割线颜色-->
    <color name="focus_border_divider_color">@color/black_opacity_40</color>

    <color name="gradient_focus_start_color">#B2FFFFFF</color>
    <color name="gradient_focus_center_color">#B2FFFFFF</color>
    <color name="gradient_focus_end_color">#10FFFFFF</color>

