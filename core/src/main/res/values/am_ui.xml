    </style>

    <style name="UI.Text.Caption.Primary">
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>

    <style name="UI.Text.Caption.Secondary">
        <item name="android:textColor">?android:textColorSecondary</item>
    </style>

    <style name="UI.Edit" parent="Widget.AppCompat.EditText">
        <item name="android:textAppearance">@style/Text.Body</item>
    </style>


    <style name="UI.Divider">
        <item name="android:background">@drawable/shape_divider_am</item>
    </style>

    <style name="UI.Divider.Horizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
    </style>

    <style name="UI.Divider.Vertical">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="UI.Recycler" parent="Widget.AppCompat.ListView" />


    <!--
    各种形状的ImageView
    使用方法：注意是设置在shapeAppearanceOverlay（或shapeAppearance）中，不知道为何设置成style的时候，没有作用
     <com.google.android.material.imageview.ShapeableImageView
            app:shapeAppearanceOverlay="@style/UI.ShapeableImageView.Rounded"
            android:layout_width="60dp"
            android:layout_height="60dp"/>
    -->
    <!--parent="Widget.MaterialComponents.ShapeableImageView"-->

    <style name="UI.ShapeableImageView" parent="Widget.MaterialComponents.ShapeableImageView">
        <item name="strokeColor">@color/tv_white</item>
    </style>

    <style name="UI.ShapeableImageView.Rounded" >
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/rounded_radius</item>
    </style>

    <style name="UI.ShapeableImageView.TopRounded" >
        <item name="cornerFamilyTopLeft">rounded</item>
        <item name="cornerFamilyTopRight">rounded</item>
        <item name="cornerSizeTopLeft">@dimen/rounded_radius</item>
        <item name="cornerSizeTopRight">@dimen/rounded_radius</item>
    </style>

    <style name="UI.ShapeableImageView.Circle">
        <item name="cornerFamily">rounded</item>
        <!--
        Sets size of corners to be 50% of min(width, height) of widget
        -->
        <item name="cornerSize">50%</item>

    </style>


    <style name="UI.ShapeableImageView.Circle.WithBorder">
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/color_primary</item>
    </style>


</resources>